<div class="container my-5">
  <div class="card shadow-sm">
    <% if @event.image.attached? %>
      <%= image_tag @event.image, class: "card-img-top", style: "height: 350px; object-fit: cover;" %>
    <% else %>
      <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 350px;">
        Sem imagem
      </div>
    <% end %>

    <div class="card-body">
      <h1 class="card-title mb-3"><%= @event.name %></h1>

      <ul class="list-unstyled mb-3">
        <li><strong>Categoria:</strong> <%= @event.category %></li>
        <li><strong>Data:</strong> <%= l(@event.date, format: :long) %></li>
        <li><strong>Preço:</strong> R$ <%= number_with_precision(@event.price, precision: 2) %></li>
        <li><strong>Ingressos disponíveis:</strong> <%= @event.tickets_available %></li>
      </ul>

      <p class="card-text"><%= simple_format(@event.description) %></p>
    </div>

    <div class="card-footer d-flex justify-content-evenly bg-white border-0">
      <%= link_to "Editar", edit_event_path(@event), class: "btn btn-primary" %>
      <%= link_to "Voltar", events_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
