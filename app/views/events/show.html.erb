<div class="event-show">
  <% if @event.image.attached? %>
    <%= image_tag @event.image, class: "event-image" %>
  <% end %>

  <div class="event-content">
    <h1 class="event-title"><%= @event.name %></h1>

    <div class="event-meta">
      <span><strong>Categoria:</strong> <%= @event.category %></span>
      <span><strong>Data:</strong> <%= l(@event.date, format: :long) %></span>
      <span><strong>Pre√ßo:</strong> R$ <%= number_with_precision(@event.price, precision: 2) %></span>
      <span><strong>Ingressos:</strong> <%= @event.tickets_available %></span>
    </div>

    <p class="event-description"><%= simple_format(@event.description) %></p>
  </div>

  <div class="event-actions">
    <%= link_to "Editar", edit_event_path(@event), class: "btn btn-edit" %>
    <%= link_to "Voltar", events_path, class: "btn btn-secondary" %>
  </div>
</div>
